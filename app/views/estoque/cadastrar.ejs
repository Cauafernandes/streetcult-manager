<% include ../includes/head %>
<% include ../includes/header %>
<main class="main product-register">
    <div class="container">
        <form action="/estoque/produto/cadastrar/salvar" method="post" class="form__default" encType="multipart/form-data">
            <h2 class="form-title">Cadastrar Produto</h2>
            <div class="label-box">
                <label><i class="fas fa-address-card"></i></label>
                <input type="text" name="nome" value="<%= dadosProduto.nome %>" placeholder="Nome"/>
            </div>
            <div class="label-box">
                <label><i class="fas fa-image"></i></label>
                <input type="file" id="productImage" name="productImage" value="<%= dadosProduto.productImage %>">
            </div>
            <!-- <div class="label-box">
                <label><i class="fas fa-palette"></i></label>
                <input type="password" name="color" value="" placeholder="Cor"/>
                <span class="plus-label">+</span>
            </div> -->
            <div class="label-box">
                <label><i class="fas fa-archive"></i></label>
                <input type="number" name="quantity" value="" placeholder="Quantidade"/>
            </div>
            <div class="label-box">
                <label><i class="fas fa-dollar-sign"></i></label>
                <input type="text" name="precoCusto" value="<%= dadosProduto.precoCusto %>" placeholder="Preço de Custo" class="preco"/>
            </div>
            <div class="label-box">
                <label><i class="fas fa-dollar-sign"></i></label>
                <input type="text" name="precoVenda" value="<%= dadosProduto.precoVenda %>" placeholder="Preço de Venda" class="preco"/>
            </div>
            <!-- <div class="label-box">
                <span>Preço Promocional</span>
                <input type="checkbox" id="precoPromocionalAtivo" name="precoPromocionalAtivo"/>
                <div class="label-box" style="display: none;">
                    <label><i class="fas fa-dollar-sign"></i></label>
                    <input type="text" name="precoPromocional" value="<%= dadosProduto.precoPromocional %>" placeholder="Preço Promocional" class="preco"/>
                </div>
            </div> -->

            <button type="submit">Cadastrar</button>
            <% if (validacao){ %>
                <ul class="validations">
                    <% for (var i = 0; i < validacao.length; i++){ %>
                        <li>
                            <%= validacao[i].msg %>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </form>
    </div>
</main>
<% include ../includes/footer %>